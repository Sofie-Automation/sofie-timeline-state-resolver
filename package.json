{
  "name": "timeline-state-resolver-packages",
  "private": true,
  "version": "0.0.0",
  "workspaces": {
    "packages": [
      "packages/timeline-state-resolver-types",
      "packages/timeline-state-resolver"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "build": "yarn build:types && yarn build:main",
    "build:types": "cd packages/timeline-state-resolver-types && yarn build",
    "build:main": "cd packages/timeline-state-resolver && yarn build",
    "lint": "yarn lerna exec yarn lint -- --",
    "test": "yarn lerna exec yarn test",
    "unit": "yarn lerna exec yarn unit",
    "unitci": "yarn lerna exec yarn unitci",
    "watch": "lerna run --parallel build:main -- --watch --preserveWatchOutput",
    "docs": "yarn typedoc .",
    "postinstall": "lerna bootstrap",
    "release:set-version": "lerna version --exact --no-changelog --no-git-tag-version --no-push --yes",
    "release:bump-release": "lerna version --exact --conventional-commits --conventional-graduate --tag-version-prefix='v' --no-push",
    "release:bump-release-force": "lerna version --exact --conventional-commits --tag-version-prefix='v' --no-push --force-publish=*",
    "release:bump-prerelease": "lerna version --exact --conventional-commits --conventional-prerelease --tag-version-prefix='v' --no-push",
    "validate:dependencies": "yarn lerna exec --parallel yarn validate:dependencies",
    "validate:dev-dependencies": "yarn lerna exec --parallel yarn validate:dev-dependencies",
    "prepublishOnly": "yarn rename-tv2",
    "rename-tv2": "yarn lerna run tv2-rename && git commit -a -m 'tmp' --author=."
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "~2.0.0",
    "@types/jest": "^26.0.9",
    "@types/node": "^12.20.42",
    "@types/request": "^2.48.8",
    "@types/sprintf-js": "^1.1.0",
    "@types/underscore": "^1.10.24",
    "@types/ws": "^7.4.7",
    "@types/xml-js": "^1.0.0",
    "jest": "^26.0.1",
    "jest-haste-map": "^26.0.1",
    "jest-resolve": "^26.0.1",
    "lerna": "^4.0.0",
    "open-cli": "^7.0.1",
    "rimraf": "^3.0.2",
    "symlink-dir": "^5.0.1",
    "ts-jest": "^26.1.0",
    "type-fest": "^2.11.1",
    "typedoc": "^0.22.10",
    "typescript": "~4.5"
  },
  "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json"
}
