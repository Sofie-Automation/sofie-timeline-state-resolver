      "docs": "yarn typedoc ."
    },
    "devDependencies": {
      "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
      "concurrently": "^5.3.0",
      "gh-pages": "^3.1.0",
      "typedoc": "^0.19.2"
    },
    "standard-version": {
      "message": "chore(release): %s [skip ci]",
      "tagPrefix": ""
    }
  }