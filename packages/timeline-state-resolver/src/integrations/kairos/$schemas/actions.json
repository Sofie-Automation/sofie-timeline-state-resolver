{
	"$schema": "../../../$schemas/action-schema.json",
	"actions": [
		{
			"id": "listClips",
			"name": "List clips in media folder",
			"destructive": false,
			"result": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"status": {
							"type": "number"
						},
						"loadProgress": {
							"type": "number"
						}
					},
					"required": [
						"name",
						"status",
						"loadProgress"
					],
					"additionalProperties": false
				}
			}
		},
		{
			"id": "listStills",
			"name": "List stills in media folder",
			"destructive": false,
			"payload": {
				"type": "object",
				"properties": {
					"subDirectory": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				},
				"additionalProperties": false
			},
			"result": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"status": {
							"type": "number"
						},
						"loadProgress": {
							"type": "number"
						}
					},
					"required": [
						"name",
						"status",
						"loadProgress"
					],
					"additionalProperties": false
				}
			}
		},
		{
			"id": "playMacro",
			"name": "Play a macro",
			"destructive": false,
			"payload": {
				"type": "object",
				"properties": {
					"macroPath": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				},
				"required": [
					"macroPath"
				],
				"additionalProperties": false
			}
		}
	]
}
