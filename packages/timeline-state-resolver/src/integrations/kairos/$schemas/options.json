{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "KAIROS Options",
	"type": "object",
	"properties": {
		"host": {
			"type": "string",
			"description": "Host of KAIROS server",
			"ui:title": "Host",
			"default": ""
		},
		"port": {
			"type": "integer",
			"description": "Port of KAIROS server",
			"ui:title": "Port",
			"default": 3005
		},
		"monitorState": {
			"type": "boolean",
			"description": "Whether to monitor the Kairos application status (that all resources exist)",
			"ui:title": "Monitor Kairos",
			"default": false
		}
	},
	"required": [
		"host"
	],
	"additionalProperties": false
}
