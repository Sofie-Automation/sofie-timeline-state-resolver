	"title": "Sofie Chef Options",
	"type": "object",
	"properties": {
		"address": {
			"type": "string",
			"sofieTitle": "Device URL",
			"sofieDescription": "Example: 'ws://127.0.0.1:5271'",
			"description": "Address to the Sofie Chef websocket server. Example: 'ws://127.0.0.1:5271'",
