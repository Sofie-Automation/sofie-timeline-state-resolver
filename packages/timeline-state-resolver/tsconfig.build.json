{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"include": ["src/**/*.ts", "src/**/*.json"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"{{PACKAGE-NAME}}": ["./src/index.ts"]
		},
		"types": ["node"],
		"composite": true,
		"target": "es2022",

		"moduleResolution": "node16",
		"esModuleInterop": true,

		// Temporary overrides, to allow for gradual migration project
		"noImplicitAny": false,
		"resolveJsonModule": true,

		// include dom types for obs
		"lib": ["dom", "es2022"]
	},
	"references": [
		{ "path": "../timeline-state-resolver-types/tsconfig.build.json" },
		{ "path": "../timeline-state-resolver-api/tsconfig.build.json" }
	]
}
