{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules/**",
		"src/**/*spec.ts",
		"src/**/__tests__/*",
		"src/**/__mocks__/*"
	],
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"*": [
				"./node_modules/*"
			],
			"{{PACKAGE-NAME}}": [
				"./src/index.ts"
			]
		},
		"types": [
			"node"
		],
		"moduleResolution": "node16",
		"esModuleInterop": true,
		"composite": true
	},
	"references": [
		{
			"path": "../timeline-state-resolver-types/tsconfig.build.json"
		}
	]
}
