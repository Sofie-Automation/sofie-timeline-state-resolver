{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.bin",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"{{PACKAGE-NAME}}": ["./src/index.ts"]
		},
		"types": ["node"],
		"composite": true,
		"skipLibCheck": true,
		"declaration": true
	},
	"references": [{ "path": "../timeline-state-resolver/tsconfig.build.json" }]
}
